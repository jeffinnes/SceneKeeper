    "discord-interactions": "^4.3.0",
    "hono": "^4.9.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^20.11.17",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "prettier": "3.6.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.43.0"
  }
